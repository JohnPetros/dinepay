{
  "extends": "@dinepay/typescript-config/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/infra/*": [
        "src/infra/*"
      ],
      "@/ui/*": [
        "src/ui/*"
      ]
    }
  },
  "include": ["src"]
}
